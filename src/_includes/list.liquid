<div class="list">
  {% if tag %}
    {% assign collection = collections[tag] | sortByPosition %}
  {% else %}
    {% assign collection = collections.projects | sortByPosition %}
  {% endif %}

  {%- for item in collection -%}
    <a href="{{item.url}}">
      {% projectPreview item homePage %}
      <img
        class="animation"
        data-src="/img/{{item.fileSlug}}/animation.gif"
        alt=""
      >
      <span>{{item.data.title}}</span>
    </a>
  {%- endfor -%}
</div>
